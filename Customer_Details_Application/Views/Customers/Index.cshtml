@model System.Data.DataTable
@{
    ViewData["Title"] = "List Of Customer";
}
<div class="jumbotron text-center">
    <h1>@ViewData["Title"]</h1>
</div>

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th>
                Phone Number
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>
                    @Model.Rows[i]["FirstName"]
                </td>
                <td>
                    @Model.Rows[i]["LastName"]
                </td>
                <td>
                    @Model.Rows[i]["Email"]
                </td>
                <td>
                    @Model.Rows[i]["PhoneNumber"]
                </td>
                <td>
                    <a asp-action="CreateOrEdit" asp-route-id="@Model.Rows[i]["CustomerId"]" class="btn btn-info">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@Model.Rows[i]["CustomerId"]" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a asp-action="CreateOrEdit" class="btn btn-primary">Create New</a>
</div>

<style>
    .jumbotron {
        background-color: #f8f9fa;
        padding: 20px;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        margin-bottom: 20px;
    }

    th, td {
        text-align: center;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            color: #fff;
        }

    .btn-info {
        background-color: #17a2b8;
        color: #fff;
    }

        .btn-info:hover {
            background-color: #117a8b;
            color: #fff;
        }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
    }

        .btn-danger:hover {
            background-color: #bd2130;
            color: #fff;
        }
</style>